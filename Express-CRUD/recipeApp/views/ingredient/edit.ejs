<h1> Edit Recipe </h1>

<form method="POST" action="/ingredient/update?_method=PUT">
   
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="<%= ingredient.name %>" class="form-control">
    </div>

    <div class="form-group">
        <label>Origin</label>
        <input type="text" name="origin" value="<%= ingredient.origin %>" class="form-control">
    </div>

    <input type="hidden" name="id" value="<%= ingredient._id %>"  class="form-control">
    <br>
    <button type="submit" class="btn btn-primary">Update Ingredient</button>

</form>