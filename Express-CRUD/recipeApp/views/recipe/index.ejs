<h1> Recipes </h1>

<table class="table table-striped">
    <tr>
        <th> Title </th>
        <th> Author </th>
        <!-- <th> Ingredients </th> -->
        <th> Instructions </th>
        <th> Created At </th>
        <th> Updated At </th>
        
        <th> Edit </th>
        <th> Delete </th>
    </tr>

    <% recipes.forEach(function(recipe){ %> 
    <tr>
        <td> <a href="/recipe/detail?id=<%= recipe._id %>">  <%= recipe.title %>  </a></td>
        <td> <%= recipe.author %> </td>
        <!-- <td> <%= recipe.ingredient.name %> </td> -->
        <td> <%= recipe.instructions %> </td>
        <td> <%= moment(recipe.createdAt).fromNow() %> </td>
        <td> <%= moment(recipe.updatedAt).fromNow() %> </td>
        <td> <a href="/recipe/edit?id=<%= recipe._id %>"> Edit </a> </td>
        <td> <a href="/recipe/delete?id=<%= recipe._id %>"> Delete </a> </td>
    </tr>
<% }) %>
</table>